p, li
    margin 0 auto .7rem
    font normal 1.5rem/1.25 MavenPro
    strong
        font-weight 800
    em
        font-weight 600
        font-style normal
    abbr
        text-decoration none
        cursor help
        border-bottom .1rem dotted linkColor
        transition border-color .25s ease-in-out
        &:hover
            border-bottom-color lighten( linkColor, 15% )

ul, ol
    list-style inside none
    margin 0
    padding 0
    li
        margin 0 auto

+media-query( all, min-width 1025px )
    p
        font normal 1.5rem/1.25 MavenPro
